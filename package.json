{
  "name": "vscode-winddown",
  "displayName": "Winddown",
  "version": "0.0.1",
  "description": "",
  "author": {
    "name": "schneefux"
  },
  "publisher": "schneefux",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schneefux/winddown"
  },
  "main": "dist/extension.js",
  "scripts": {
    "dev": "webpack --mode development --progress",
    "build": "webpack --mode production"
  },
  "dependencies": {
    "chroma-js": "^2.1.0",
    "json5": "^2.1.2"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.0.0",
    "@types/json5": "0.0.30",
    "@types/node": "12.12.26",
    "@types/vscode": "1.42.0",
    "clean-webpack-plugin": "^3.0.0",
    "terser-webpack-plugin": "^2.3.5",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "vsce": "^1.74.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Winddown configuration",
      "properties": {
        "winddown.minutesTillBreak": {
          "type": "number",
          "default": 15,
          "description": "Time in minutes until the theme starts fading out."
        },
        "winddown.saturationDecayPerMinute": {
          "type": "number",
          "default": 0.2,
          "description": "Fadeout speed. A value of 1.0 means that colors will have faded out within one minute."
        },
        "winddown.breakDurationMinutes": {
          "type": "number",
          "default": 3,
          "description": "Duration in minutes until theme colors are reset to normal."
        }
      }
    }
  }
}
